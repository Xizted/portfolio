---
import { type Technology } from '../interfaces/technology';

interface Props {
  title: string;
  technologies: Technology[];
}

const { title, technologies } = Astro.props;
---

<div class='bg-white p-8 rounded-lg shadow-lg'>
  <h3 class='text-xl font-semibold mb-8 text-center'>{title}</h3>
  <div class='grid grid-cols-2 gap-6'>
    {
      technologies.map(({ title, icon }) => (
        <div class='flex flex-col items-center'>
          <div class='w-16 h-16 flex items-center justify-center bg-blue-50 rounded-lg mb-3'>
            <img src={icon} alt={title} class='w-12 h-12' />
          </div>
          <span class='text-gray-600'>{title}</span>
        </div>
      ))
    }
  </div>
</div>
